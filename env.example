# AICrisisAlert Environment Configuration
# Copy this file to .env and modify as needed

# API Configuration
API_TITLE=AICrisisAlert API
API_VERSION=1.0.0
API_DESCRIPTION=AI-powered crisis management and alert system
HOST=0.0.0.0
PORT=8000
RELOAD=false
WORKERS=1

# Model Configuration
MODEL_PATH=outputs/models/bertweet_enhanced
MODEL_TYPE=bertweet
MODEL_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/crisis_alert
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# Crisis Management Configuration
EMERGENCY_THRESHOLD=0.8
BATCH_SIZE_LIMIT=100
MAX_TEXT_LENGTH=10000

# Notification Configuration
ENABLE_NOTIFICATIONS=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
SENDGRID_API_KEY=

# Development Configuration
USE_SIMPLE_API=true 